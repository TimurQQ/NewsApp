<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
       <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="roundImgView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!--SwitchCompat-->
        <style name="MySwitch" parent="Theme.AppCompat.Light">
            <!--активное состояние-->
            <item name="colorControlActivated">@android:color/black</item>
            <!-- цвет дорожки-->
           <item name="trackTint">@android:color/white</item>
            <!-- неактивное состояние ползунка -->
            <item name="colorSwitchThumbNormal">@android:color/black</item>

        </style>


</resources>