<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selection"
        android:textSize="@dimen/dimens_20sp"
        android:textColor="@color/darck_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dimenes_550dp"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/selection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimenes_20dp"
        android:background="@drawable/tv_style_with_dark_background"
        android:orientation="vertical">

        <android_courses.newsapp.custom.CustomEditTextView
            android:id="@+id/search_by_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editHint="search by title" >

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/search_by_title_button"
                android:layout_width="@dimen/dimens_50dp"
                android:layout_height="@dimen/dimens_50dp"
                android:src="@drawable/ic_baseline_youtube_searched_for_24"
                app:layout_constraintStart_toStartOf="@id/search_by_title"
                app:layout_constraintBottom_toBottomOf="@id/search_by_title"
                app:layout_constraintTop_toTopOf="@id/search_by_title"
                android:layout_marginStart="@dimen/dimenes_20dp"
                android:background="@color/fui_transparent"/>
        </android_courses.newsapp.custom.CustomEditTextView>

        <android_courses.newsapp.custom.CustomEditTextView
            android:id="@+id/content_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editHint="content search" >

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/content_search_button"
                android:layout_width="@dimen/dimens_50dp"
                android:layout_height="@dimen/dimens_50dp"
                android:layout_marginStart="@dimen/dimenes_20dp"
                android:src="@drawable/ic_baseline_youtube_searched_for_24"
                app:layout_constraintBottom_toBottomOf="@id/content_search"
                app:layout_constraintStart_toStartOf="@id/content_search"
                app:layout_constraintTop_toTopOf="@id/content_search"
                android:background="@color/fui_transparent"/>
        </android_courses.newsapp.custom.CustomEditTextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>